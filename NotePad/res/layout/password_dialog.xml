<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/root">
    <TextView 
    	android:id="@+id/textView1" 
    	android:layout_height="wrap_content" 
    	android:text="@string/settings_password" 
    	android:layout_width="fill_parent" 
    	android:textColor="@color/title_color" 
    	android:textSize="@dimen/help_text_size"></TextView>
    <EditText 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:inputType="textPassword" 
    	android:id="@+id/EditText_Pwd1" android:maxLines="1">
        <requestFocus></requestFocus>
    </EditText>
    <TextView 
    	android:id="@+id/textView2" 
    	android:layout_height="wrap_content" 
    	android:text="@string/settings_password2"
    	android:textColor="@color/title_color" 
    	android:textSize="@dimen/help_text_size" 
    	android:layout_width="fill_parent"></TextView>
    <EditText 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:inputType="textPassword" 
    	android:id="@+id/EditText_Pwd2" android:maxLines="1">
    </EditText>
    <TextView  
    	android:id="@+id/TextView_PwdProblem" 
    	android:layout_height="wrap_content" 
    	android:textColor="@color/title_color" 
    	android:textSize="@dimen/help_text_size" 
    	android:layout_width="fill_parent"></TextView>
</LinearLayout>